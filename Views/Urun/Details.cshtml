@using SQLitePCL
@model Urun


<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="gallery-wrap">
                    <div class="img-big-wrap img-thumbnail">
                        <a href="~/img/@Model.Resim" data-type="image" data-fslightbox>

                            <img src="~/img/@Model.Resim" class="img-fluid d-block mx-auto" />

                        </a>
                    </div>
                    <div class="thumbs-wrap">
                        <a href="~/img/1-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/1.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/2-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/2.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/3-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/3.jpeg" height="60" alt="">
                        </a>
                        <a href="~/img/4-big.jpeg" data-type="image" data-fslightbox>
                            <img src="~/img/4.jpeg" height="60" alt="">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <article>
                    <h4 class="title text-dark">@Model.UrunAdi</h4>
                    <div class="rating-wrap">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <p class="text-success">Stokta</p>
                    <div class="mb-3"><b class="price h5">@Model.Fiyat.ToString("C")</b></div>
                    <div class="product-description mb-3">@Model.Aciklama</div>
                    <dl class="row border-bottom">
                        <dt class="col-3">Renk</dt>
                        <dd class="col-9">Yıldız Işığı</dd>
                        <dt class="col-3">Bağlantı Özellikleri</dt>
                        <dd class="col-9">GPS</dd>
                    </dl>
                    <div class="row mb-3">
                        <div class="col-md-4 col-6">
                            <label class="form-label">Kasa Boyutu</label>
                            <select class="form-select">
                                <option value="">41 mm</option>
                                <option value="">45 mm</option>
                            </select>
                        </div>
                    </div>
                    <div class="buttons">
                        <a href="#" class="btn btn-warning">
                            <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                        </a>
                        <a href="#" class="btn btn-light">
                            <i class="fa-regular fa-heart basket me-1"></i> Listeye Ekle
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>

<section class="mt-3">
    <div class="container">

    @{
  var urunler = (List<Urun>)ViewData["Benzer Urunler"]!;
    }  
  
    @if(urunler.Count >0)
    {
        
        <h4 class="mb-3">Benzer Ürünler</h4>
        <div class="row gy-3">

                   
                 
                 @foreach(var item in (List<Urun>)ViewData["Benzer Urunler"]!)
                {


                <div class="col-lg-3 col-sm-6 col-12">
                <div class="card shadow">
                    <div class="img-wrap">
                        <span class="fa fa-regular fa-heart"></span>
                        <img src="~/img/@item.Resim" alt="ürün 1" class="card-img-top">
                    </div>

                    <div class="border-top info-wrap">
                        <a href="#" class="title text-truncate">@item.UrunAdi</a>
                        <div class="price-wrap mb-3">
                            <span class="price-discount">@item.Fiyat</span>
                            @* <del class="price">49.999 ₺</del> *@
                        </div>
                        <a href="#" class="btn btn-light w-100">
                            <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                        </a>
                    </div>
                </div>
         </div>

}
        

            
         </div>
    }

      
      
        

    </div>
</section>